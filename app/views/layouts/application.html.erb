<!DOCTYPE html>
<html>
<head>
  <title>DemoApp</title>
  <%= stylesheet_link_tag  "application", :media => "all" %>
  <%= stylesheet_link_tag  "bootstrap"%>
  <%= stylesheet_link_tag  "bootstrap.min"%>
  <%= stylesheet_link_tag  "bootstrap-responsive"%>
  <%= stylesheet_link_tag  "bootstrap-responsive.min"%>
  <%= stylesheet_link_tag  "jasny-bootstrap" %>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= javascript_include_tag "bootstrap.min" %>
  <%= javascript_include_tag "jasny-bootstrap" %>
  <%= csrf_meta_tags %>

</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
        <% if current_user %>
          <%= link_to "Logout", destroy_user_session_path, class: "brand", method: :delete %>
            <div class="nav-collapse">
              <ul class="nav">
                <li><%= link_to "Browse Albums", albums_path %></li>
              </ul>
            </div>
        <%else %>
          <%= link_to "Login", new_user_session_path, class: "brand" %>
        <%end%>
    </div>
  </div>
</div>


  <div class="container">
	  <p class="notice"><%= notice %></p>
    <%= yield %>
  </div>

</body>
</html>
